@model agskeys.Models.customer_profile_table

@{
    ViewBag.Title = "profile";
    Layout = "~/Views/Shared/_MobileClienteleLayout.cshtml";
}

<div class="L1 navbar-header">
    <!-- <img src="images/bg.jpg"> -->
    <div class="container">
        <div class="row" style="background: #fa4e5a;">

            <div class="col-sm-12 col-xs-12 disp-name">
                <span class="col-sm-2 col-xs-2 " style="font-size:30px;cursor:pointer;color:white;" onclick="openNav()">&#9776; </span>

                <div id="L1-body">
                    <p class="col-sm-8 col-xs-8 ">Profile</p>
                    <a class="col-sm-2 col-xs-2 " onclick="goBack()" style="padding-top: 8px;"><i class="fa fa-angle-left"></i></a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="L1 main-page" id="L-body" style="min-height: 100%;">
    <div class="container">
       
        <div class="row" id="sec">

            <div class="col-sm-12 col-xs-12 disp-name">

                @if (!string.IsNullOrEmpty(Model.profileimg))
                {
                    <img class="img-circle" width="104" height="104" src="@Url.Content(Model.profileimg)" style="margin-top: 20px;">
                }
                else
                {
                    <img class="img-circle" width="104" height="104" src="~/customerImage/customer_dummy.png" style="margin-top: 20px;">
                }
            </div>
            <div class="col-sm-12 col-xs-12 disp-name">
                <p>@Html.DisplayFor(model => model.customerid)<span> ( Customer Id ) </span></p>
            </div>
        </div>

                    <!-- Basic Form Inputs card start -->
                    <div class="card">
                        <div class="card-block ">

                            <div class="row" style="padding-top: 20px;">
                               
                                <div class="col-sm-6 col-md-6">
                                    <h4 style="margin-bottom:25px;">Additional Information</h4>
                                    <table class="table">
                                        <tr>
                                            <th><i class="fa fa-user" aria-hidden="true"></i></th>
                                            <td>@Html.DisplayFor(model => model.name)</td>
                                        </tr>
                                        <tr>
                                            <th><i class="fa fa-phone" aria-hidden="true"></i></th>
                                            <td>@Html.DisplayFor(model => model.phoneno)</td>
                                        </tr>
                                        <tr>
                                            <th><i class="fa fa-envelope" aria-hidden="true"></i></th>
                                            <td>@Html.DisplayFor(model => model.email)</td>
                                        </tr>
                                        <tr>
                                            <th><i class="fa fa-phone-square" aria-hidden="true"></i></th>
                                            <td>
                                                @{if (Model.alterphoneno == null)
                                                    {
                                                        Model.alterphoneno = "Not Updated";
                                                    }
                                                }
                                                @Html.DisplayFor(model => model.alterphoneno)
                                            </td>
                                        </tr>
                                        @if (!string.IsNullOrEmpty(Model.dob))
                                        {
                                            <tr>
                                                <th><i class="fa fa-calendar" aria-hidden="true"></i></th>
                                                <td>@Html.DisplayFor(model => model.dob)<span style="color:#808080"> ( @Html.DisplayNameFor(model => model.dob) )</span></td>

                                            </tr>
                                        }
                                        @if (!string.IsNullOrEmpty(Model.weddingdate))
                                        {
                                            <tr>
                                                <th><i class="fa fa-calendar" aria-hidden="true"></i></th>
                                                <td>@Html.DisplayFor(model => model.weddingdate)<span style="color:#808080"> ( @Html.DisplayNameFor(model => model.weddingdate) )</span></td>

                                            </tr>
                                        }
                                        @if (!string.IsNullOrEmpty(Model.address))
                                        {
                                            <tr>
                                                <th><i class="fa fa-home" aria-hidden="true"></i></th>
                                                <td>@Html.EditorFor(model => model.address, new { htmlAttributes = new { @class = "form-control", @readonly = true, @style = "background-color:#FFF; border: 0;", @rows = 5 } })</td>

                                            </tr>
                                        }
                                    </table>
                                </div>
                            </div>


                        </div>
                    </div>


                
      
    </div>
</div>

