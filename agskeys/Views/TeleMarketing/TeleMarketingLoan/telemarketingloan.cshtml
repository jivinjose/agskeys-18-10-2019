@model IEnumerable<agskeys.Models.loan_table>

@{
    ViewBag.Title = "telemarketingloan";
    Layout = "~/Views/Shared/_TeleMarketingLayout.cshtml";
}

<div class="page-header card">
    <div class="row align-items-end">
        <div class="col-lg-7">
            <div class="page-header-title">
                <i class="feather icon-users bg-c-blue"></i>
                <div class="d-inline">
                    <h5>Loan Management</h5>
                    <span>Aggressive Sales and Services</span>
                </div>
            </div>
        </div>
        <div class="col-lg-5">
            <div class="page-header-breadcrumb">
                <ul class=" breadcrumb breadcrumb-title">
                    <li class="breadcrumb-item">
                        <a href="#"><i class="feather icon-home"></i></a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="#">Dashboard</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="#!">Loan Management</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
<div class="pcoded-inner-content">
    <div class="main-body">
        <div class="page-wrapper">
            <div class="page-body">
                <div class="card">
                    <div class="card-block">
                        <div class="dt-responsive table-responsive">
                            <p>
                                <button onclick="createModal('@Url.Action("Create", "telemarketingloan")')" class="btn waves-effect waves-light hor-grd btn-grd-primary"><i class="fa fa-user-plus"></i>Create</button>
                            </p>
                            <table id="alt-pg-dt" class="table table-striped table-bordered nowrap">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>
                                            Customer Id
                                        </th>
                                        <th>
                                            Partner Id
                                        </th>
                                        <th>
                                            Loan Amount
                                        </th>
                                        <th>
                                            Disbursed Amount
                                        </th>
                                        <th>
                                            Created By
                                        </th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int i = 0;
                                    }
                                    @foreach (var item in Model)
                                    {
                                        i++;
                                        <tr>
                                            <td>@i</td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.employeetype)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.employee)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.loanamt)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.disbursementamt)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.addedby)
                                            </td>
                                            <td>


                                                <a href="#" id="Track" onclick="createModal('@Url.Action("Track", "telemarketingloan" , new {id=item.id })')"><i class="icon feather icon-map-pin f-w-600 f-16 m-r-15" style="color:#fb8d00;"></i></a>


                                                <a href="#" id="details" onclick="createModal('@Url.Action("Details", "telemarketingloan" , new {id=item.id })')"><i class="icon feather icon-info f-w-600 f-16 m-r-15" style="color:#0042fb;"></i></a>



                                                @foreach (var loan in ViewBag.assigned_loan)
                                                {
                                                    if (loan.loanid == item.id.ToString())
                                                    {

                                                        <a href="#" id="edit" onclick="createModal('@Url.Action("Edit", "telemarketingloan" , new {id=item.id })')"><i class="icon feather icon-edit f-w-600 f-16 m-r-15 text-c-green"></i></a>
                                                        <a href="#" id="delete" onclick="createModal('@Url.Action("Delete", "telemarketingloan" , new {id=item.id })')"><i class="feather icon-trash-2 f-w-600 f-16 text-c-red"></i></a>
                                                    }
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>

                                        <th>#</th>
                                        <th>
                                            Customer Id
                                        </th>
                                        <th>
                                            Partner Id
                                        </th>
                                        <th>
                                            Loan Amount
                                        </th>
                                        <th>
                                            Disbursed Amount
                                        </th>
                                        <th>
                                            Created By
                                        </th>
                                        <th>Actions</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="styleSelector">
    </div>
</div>

